{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "outDir": "dist",
    "types": ["@nomiclabs/hardhat-ethers", "@nomiclabs/hardhat-waffle"],
    "noImplicitAny": false
  },
  "exclude": ["node_modules"],
  "include": [
    "artifacts/**/*",
    "artifacts/**/*.json",
    "scripts/**/*",
    "test/",
    "hardhat.config.ts",
    "./deploy",
    "tasks/claim.ts",
    "tasks/dropKeys.ts"
  ],
  "files": ["./hardhat.config.ts"],
  "ts-node": {
    "files": true
  }
}
